# NPM Configuration for TecBunny Store
# Optimized for development and production builds

# Suppress warnings during npm install
audit=false
fund=false

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Suppress funding messages
funding=false

# Prefer offline for faster installs when possible
prefer-offline=true

# Log level - set to 'error' to reduce noise, 'info' for more details
loglevel=error

# Performance optimizations
cache-max=86400000
fetch-timeout=60000
fetch-retry-maxtimeout=60000
fetch-retry-mintimeout=10000

# Disable optional dependencies to reduce warnings
optional=false

# Progress indicator for long installs
progress=true
